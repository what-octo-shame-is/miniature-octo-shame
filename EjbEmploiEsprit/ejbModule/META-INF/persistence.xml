<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="EDT_EJB">
		<jta-data-source>java:/OracleDSJNDI</jta-data-source>
		<class>tn.esprit.edt.persistance.Module</class>
		<class>tn.esprit.edt.persistance.Enseignant</class>
		<class>tn.esprit.edt.persistance.Groupe</class>
		<class>tn.esprit.edt.persistance.Prestation</class>
		<class>tn.esprit.edt.persistance.Pool</class>
		<class>tn.esprit.edt.persistance.Creneau</class>
		<class>tn.esprit.edt.persistance.SaisonUniversitaire</class>
		<class>tn.esprit.edt.persistance.SaisonClasse</class>
		<class>tn.esprit.edt.persistance.Admin</class>
		<class>tn.esprit.edt.persistance.Emploi</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.OracleDialect" />
			<property name="hibernate.show_sql" value="false"/>
		</properties>
	</persistence-unit>
</persistence>
					